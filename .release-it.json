{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "git log --no-merges --pretty=format:\"* %s %h\" ${latestTag}...master",
    "assets": ["dist/*.js"]
  }
}
